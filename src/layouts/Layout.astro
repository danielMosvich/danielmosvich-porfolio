---
import BgEffect from "../components/BgEffect.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="daniel mosvich portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div
      class="fixed top-0 z-[-2] h-screen w-screen bg-transparent bg-[radial-gradient(ellipse_100%_70%_at_50%_-10%,rgba(183,250,96,0.3),rgba(255,255,255,0))] dark:bg-[radial-gradient(ellipse_100%_70%_at_50%_-10%,rgba(183,250,96,0.1),rgba(255,255,255,0))]"
    >
    </div>
    <BgEffect />
    <slot />
    <div
      class="absolute bottom-0 z-[-2] h-screen w-screen bg-transparent bg-[radial-gradient(ellipse_100%_70%_at_50%_120%,rgba(183,250,96,0.3),rgba(255,255,255,0))] dark:bg-[radial-gradient(ellipse_100%_70%_at_50%_120%,rgba(183,250,96,0.1),rgba(255,255,255,0))]"
    >
    </div>
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap");
  * {
    /* font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; */
    /* font-family: "Roboto", sans-serif; */
    font-family: "Inter", sans-serif;
  }
  :root {
  }
  body {
    background-color: white;
    position: relative;
    overflow-x: hidden;
  }
  /* dark mode */
  @media (prefers-color-scheme: dark) {
    body {
      background-color: #161616;
    }
  }
</style>
