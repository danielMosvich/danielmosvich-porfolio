---
const { pulse, href = "/" } = Astro.props;
---

<a href={href} target="_blank" class="pill">
  {
    pulse && (
      <span class="w-3 h-3 rounded-full bg-lime-500 flex items-center justify-center">
        <span class="w-full h-full bg-lime-500 rounded-full animate-ping" />
      </span>
    )
  }
  <slot />
</a>

<style>
  .pill {
    display: flex;
    align-items: center;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    gap: 8px;
    border-radius: 9999px;
    padding: 8px 12px;
    border: 1px solid rgb(206, 205, 205);
    box-shadow: inset 0 0 0 2px white;
    background-color: rgba(235, 242, 245, 0.5);
    font-weight: 600;
    color: rgb(30 41 59 / 0.8);
    transition:
      background-color 0.3s,
      box-shadow 0.3s;
  }
  .pill:hover {
    background-color: rgba(252, 254, 255, 0.9);
    box-shadow:
      inset 0 0 0 1px rgb(243, 243, 243),
      0 4px 4px rgba(0, 0, 0, 0.03);
  }
  .pill:focus {
    background-color: rgba(252, 254, 255, 0.9);
    box-shadow:
      inset 0 0 0 1px rgb(243, 243, 243),
      0 4px 5px rgba(0, 0, 0, 0.08);
    outline-offset: 3px;
    outline: 2px solid rgba(0, 0, 0, 0.3);
  }
  @media (prefers-color-scheme: dark) {
    .pill {
      background-color: rgba(255, 255, 255, 0.068);
      /* border: 1px solid rgb(206, 205, 205); */
      color: rgb(219, 218, 218);
      border-color: rgba(97, 94, 94, 0.986);
      box-shadow: inset 0 0 0 1px rgb(255, 255, 255);
    }
    .pill:hover {
      background-color: rgba(85, 87, 90, 0.685);

    }
  }
  
</style>
