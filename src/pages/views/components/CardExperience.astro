---
interface Props {
  year: string;
  title: string;
  description: string;
}
const { year, title, description } = Astro.props;
---

<li class="container flex flex-col sm:flex-row relative py-1">
  <div class="sm:w-1/4">
    <h5
      class="whitespace-nowrap font-semibold text-slate-900/70 tracking-tight"
    >
      {year}
    </h5>
  </div>
  <div class="sm:w-3/4">
    <h2
      class="whitespace-nowrap font-extrabold text-slate-900/80 uppercase tracking-tight"
    >
      {title}
    </h2>
    <p class="text-slate-900/70 font-[500]">
      {description}
    </p>
  </div>
  <div class="item border border-transparent hover:border-slate-300 hidden sm:flex"></div>
</li>

<style>
  .container {
    transition:
      border 0.3s,
      box-shadow 0.3s;
  }
  .item {
    background-color: transparent;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    transform: scaleY(1.22) scaleX(1.05);
    border-radius: 10px;
    z-index: -1;
    transition: all 0.2s;
  }
  .container:hover .item {
    background-color: rgba(255, 255, 255, 0.8);
    border: 1px solid rgb(212 212 216);
    box-shadow: 0 5px 10px rgba(139, 139, 139, 0.1);
    border-radius: 8px;
  }
</style>
