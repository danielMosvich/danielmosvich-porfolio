---
interface Props {
  title: string;
  description: string;
  src?: string;
  href?: string;
}
// import PillTech from "../../../components/PillTech.astro";
const { title, description, src, href = "/" } = Astro.props;
---

<a
  href={href}
  class="item flex flex-col w-full rounded-xl p-3 relative border border-slate-200 hover:border-slate-300"
>
  {
    src && (
      <div class="flex w-full overflow-hidden h-full max-h-[180px] rounded-lg">
        <img
          class="w-full h-[200px] object-cover  left-0 top-0 image"
          src={`mucks/${src}.png`}
          alt="daniel mosvich image"
        />
      </div>
    )
  }
  <div class="flex flex-col w-full z-10">
    <h1 class="font-bold text-slate-800/80 text-2xl mt-4">{title}</h1>
    <div class="flex gap-2 mt-1">
      <!-- TECHNOLOGIES -->
      <slot />
    </div>
    <p class="text-slate-800/70 font-[500] mt-2">
      {description}
    </p>
  </div>
</a>

<style>
  .item {
    /* border: 1px solid rgb(223, 223, 223); */
    /* box-shadow: 0 2px 5px rgb(0, 0, 0,0);  */
    background-color: rgba(250, 250, 250, 0.7);
    cursor: pointer;
    transition:
      border 0.3s,
      box-shadow 0.3s,
      background-color 0.3s;
    box-shadow: inset 0 0 0 2px white;
  }
  .item:hover {
    /* border: 1px solid rgba(182, 182, 182, 0.5); */
    background-color: rgba(255, 255, 255, 1);
  }
  .image {
    object-position: 0px -25px;
    transition:
      scale 0.3s,
      object-position 0.3s;
    filter: grayscale(0.3);
  }
  .item:hover .image {
    scale: 1.15;
    object-position: 0px -35px;
    filter: grayscale(0);
  }
  .item:focus {
    outline-offset: 2px;
    outline: 4px solid rgb(30 41 59 / 50%);
  }
</style>
